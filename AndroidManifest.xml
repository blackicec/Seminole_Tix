<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dunksoftware.seminoletix"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dunksoftware.seminoletix.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dunksoftware.seminoletix.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.dunksoftware.seminoletix.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.dunksoftware.seminoletix.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.dunksoftware.seminoletix.ListActivity"
            android:label="@string/title_activity_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MenuActivity" />
        </activity>
        <activity
            android:name="com.dunksoftware.seminoletix.ShowGamesList"
            android:label="@string/title_activity_show_games_list" >
        </activity>
    </application>

</manifest>